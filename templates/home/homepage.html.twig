{% extends 'base.html.twig' %}
{% block title %}MyCoffeeShop | Accueil
{%
endblock title%}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('styles/style.css') }}"/>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('scripts/slider.js') }}"></script>
{% endblock %}
{% block body %}
	<section class="slider">
		<div class="container">
			<div class="slideshow">
				{% set i=0 %}
				{% for product in products %}
					<div id="slide-{{ i }}" class="slide">
						<a href="{% if i == 0 %}#slide-10 {% else %}#slide-{{ i-1 }}{% endif %}"></a>
						<a href="#slide-{{ i+1 }}"></a>
						{% set images = ['macchiato.jpg', 'cafe.jpg', 'cafe2.jpg', 'cafe3.jpg'] %}
						{% set randomNumber = randomNumber(3) %}

						<img src="{{ asset('assets/' ~ images[randomNumber]) }}"/>
						{% set i = i + 1 %}
					</div>
				{% endfor %}
			</div>
			<div class="pagination">
				{% set i=0 %}
				{% for product in products %}
					<a href="#slide-{{ i }}">
						<span>{{ i }}</span>
					</a>
					{% set i = i + 1 %}
				{% endfor %}
			</div>
		</div>
	</section>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>

	<section class="aboutUs">
		<h1 class="aboutUsTitle">A propos de nous</h1>
		<p>
			Bienvenue chez MyCoffeeShop, votre destination en ligne pour une expérience
									café exceptionnelle. Chez MyCoffeeShop, notre passion pour le café de
									qualité est le cœur de notre entreprise. Nous nous engageons à vous offrir
									une sélection méticuleusement choisie des meilleurs grains de café du monde
									entier, torréfiés avec soin pour révéler des saveurs riches et un arôme
									envoûtant.
		</p>
	</section>

	<section class="bestSellers">
		<p class="bestSellers__title">BEST - SELLERS</p>
		<div class="bestSellers__contain">
			{% for bs in bestSellers %}
				<div class="bestSellers__contain__div">
					<img src="{{ asset('assets/best-seller.jpg') }}">
					<div class="bestSellers__contain__div__content">
						<p class="bestSellers__contain__div__content__title">{{ bs.name }}</p>
						<p class="bestSellers__contain__div__content__description">{{ bs.description }}</p>
					</div>
				</div>
			{% endfor %}
		</div>

	</section>

	<div class="elfsight-app-24618d80-0853-4d06-b6fe-370d9a6c7e61" data-elfsight-app-lazy></div>
{% endblock body %}
